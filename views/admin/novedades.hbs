<div class="container" style="margin-top: 100px;">
    <div class="row mb-4">
        <div class="col text-end">
            <p>
                Hola, <strong>{{persona}}</strong>!
                <a href="/admin/login/logout" class="btn btn-danger logout-btn">
                    Cerrar Sesión <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>

    <div class="row align-items-center mb-3">
        <div class="col-8">
            <h2 class="m-0">Listado de Novedades</h2>
        </div>
        <div class="col-4 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success">
                <i class="fas fa-plus"></i> Nuevo
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-right">
                            <a href="" class="btn btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a href="admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>